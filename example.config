server {
    listen 80;
    server_name example.com www.example.com; 
    root www;
    index index.html;
    client_max_body_size 50;
    autoindex on;
    cgi .php ./cgi-bin/;
    allow POST;

    location /js {
        root /var/www/html;
        index index.html;
        allow GET POST DELETE;
    }

    location /css {
        root /var/www/html;
        index about.html;
        allow GET DELETE;
    }
}

