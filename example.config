** NGINX configuration file server part **


server {
    listen 80;  # The port on which this server will listen for HTTP requests
    server_name example.com;  # Replace 'example.com' with your actual domain name

    # Redirect all HTTP requests to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;  # The port on which this server will listen for HTTPS requests
    server_name example.com;  # Replace 'example.com' with your actual domain name

    # SSL Certificate configuration
    ssl_certificate /path/to/your/certificate.crt;
    ssl_certificate_key /path/to/your/private_key.key;

    # SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";

    # Location configuration for handling requests
    location / {
        root /var/www/example.com/public_html;  # Replace with your website's root directory
        index index.html index.htm;  # The default index file(s)
    }

    # Error page handling
    error_page 404 /404.html;  # Custom 404 error page
    error_page 500 502 503 504 /50x.html;  # Custom 50x error page
    location = /50x.html {
        root /var/www/example.com/errors;  # Replace with your custom error pages directory
    }
}
