server {
    host 127.0.0.1;
	listen 8080;
	server_name 127.73.73.7;
    client_max_body_size 50000000;
	error_page 404 /404.html;
	error_page 430 /430.html;

    location /js {
        allow GET POST;
    }

    location /images {
        allow GET POST;
        root /guarder-html/images;
        autoindex on;
    }

    location /cgi-bin {
        allow GET POST DELETE;
        cgi .py;
    }

    location / {
        root /guarder-html;
        index /index.html;
        allow GET;
    }

    location /css {
        allow GET;
    }

    location /cgi-bin/uploads {
        allow GET POST;
        root /guarder-html/cgi-bin/uploads;
        autoindex on;
        deny DELETE;
    }
}

