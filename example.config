server {
    host 127.0.0.1;
	listen 8080;
	server_name example.com;
  client_max_body_size 50000000;
	error_page 404 /../DefaultError/404.html;

    location /js {
        allow GET POST;
    }

    location /images {
        allow GET POST;
        index ../../DefaultError/403.html;
        autoindex on;
    }

    location /cgi-bin {
        allow GET POST DELETE;
        cgi .py;
    }

    location / {
        root /guarder-html;
        index /index.html;
        allow GET POST;
    }

    location /css {
        allow GET;
        return ../../DefaultError/403.html;
    }

    location /cgi-bin/uploads {
        allow GET POST;
        root /guarder-html/cgi-bin/uploads;
        autoindex on;
        deny DELETE;
    }
}